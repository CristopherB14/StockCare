@model StockCare.Controllers.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid text-light bg-dark p-4 rounded">
    <div class="row g-4">
        <div class="col-md-8">
            <div class="card bg-secondary text-light shadow-sm">
                <div class="card-body">
                    <h2 class="card-title mb-3">Resumen</h2>
                    <p>Total de productos: <strong>@Model.TotalProducts</strong></p>
                    <p>Productos con stock bajo: <strong>@Model.LowStockCount</strong></p>

                    <h4 class="mt-4">Productos con stock bajo</h4>
                    <table class="table table-dark table-striped table-sm align-middle mt-2">
                        <thead class="table-secondary text-dark">
                            <tr><th>Nombre</th><th>Stock</th><th>Mínimo</th></tr>
                        </thead>
                        <tbody>
                            @foreach(var p in Model.LowStockProducts)
                            {
                                <tr class="table-danger">
                                    <td>@p.Name</td>
                                    <td>@p.CurrentStock</td>
                                    <td>@p.MinimumStock</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-secondary text-light shadow-sm mb-3">
                <div class="card-body">
                    <h3 class="card-title">Top vendidos</h3>
                    <ul class="list-group list-group-flush">
                        @foreach(var t in Model.TopSold)
                        {
                            <li class="list-group-item bg-dark text-light d-flex justify-content-between align-items-center">
                                @t.Name
                                <span class="badge bg-primary rounded-pill">@t.Quantity</span>
                            </li>
                        }
                    </ul>
                </div>
            </div>

            <div class="card bg-secondary text-light shadow-sm">
                <div class="card-body">
                    <h3 class="card-title">Rentabilidad</h3>
                    <ul class="list-group list-group-flush">
                        @foreach(var r in Model.Profitability)
                        {
                            <li class="list-group-item bg-dark text-light">
                                <div>@r.Name — Vendidos: @r.SoldQty</div>
                                <small>Ganancia/unidad: @r.ProfitPerUnit.ToString("C") — Total: @r.TotalProfit.ToString("C")</small>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
