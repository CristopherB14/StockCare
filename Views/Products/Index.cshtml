@model IEnumerable<StockCare.Models.Product>

@{
    ViewData["Title"] = "Productos";
}

<div class="container bg-dark text-light p-4 rounded shadow-sm">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Productos</h2>

        <div class="d-flex gap-2">
            <a class="btn btn-outline-light" href="/Products/Create">
                <span class="fw-semibold">+ Crear Producto</span>
            </a>
        </div>
    </div>

    @if (!Model?.Any() ?? true)
    {
        <div class="alert alert-secondary text-dark">
            No hay productos registrados.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-dark table-hover align-middle mb-0">
                <thead class="table-secondary text-dark">
                    <tr>
                        <th>Nombre</th>
                        <th>Categor√≠a</th>
                        <th class="text-end">Precio Venta</th>
                        <th class="text-center">Stock</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        var lowStock = item.CurrentStock < item.MinimumStock;
                        <tr class="@(lowStock ? "table-warning" : "")">
                            <td class="fw-semibold">@item.Name</td>
                            <td class="text-muted">@item.Category</td>
                            <td class="text-end">@item.SalePrice.ToString("C")</td>
                            <td class="text-center">
                                @item.CurrentStock
                                @if (lowStock)
                                {
                                    <span class="badge bg-danger ms-2">Bajo</span>
                                }
                            </td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-light me-1" href="/Products/Details/@item.Id">Ver</a>
                                <a class="btn btn-sm btn-outline-info me-1" href="/Products/Edit/@item.Id">Editar</a>
                                <a class="btn btn-sm btn-danger" href="/Products/Delete/@item.Id">Borrar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
