@model StockCare.Models.Product
@{
    ViewData["Title"] = "Crear Producto";
}

<div class="container bg-dark text-light p-4 rounded shadow-sm">
    <h2 class="mb-4">Crear Producto</h2>

    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label class="form-label">Nombre</label>
            <input asp-for="Name" class="form-control bg-secondary text-light" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Descripción</label>
            <textarea asp-for="Description" class="form-control bg-secondary text-light"></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">Categoría</label>
            <input asp-for="Category" class="form-control bg-secondary text-light" />
        </div>

        <div class="row">
            <div class="col-md-4 mb-3">
                <label class="form-label">Precio Compra</label>
                <input asp-for="PurchasePrice" class="form-control bg-secondary text-light" />
            </div>
            <div class="col-md-4 mb-3">
                <label class="form-label">Precio Venta</label>
                <input asp-for="SalePrice" class="form-control bg-secondary text-light" />
            </div>
            <div class="col-md-4 mb-3">
                <label class="form-label">Stock Actual</label>
                <input asp-for="CurrentStock" class="form-control bg-secondary text-light" />
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label">Stock Mínimo</label>
            <input asp-for="MinimumStock" class="form-control bg-secondary text-light" />
        </div>

        <button type="submit" class="btn btn-primary me-2">Guardar</button>
        <a class="btn btn-outline-light" href="/Products">Cancelar</a>
    </form>

    <partial name="_ValidationScriptsPartial" />
</div>
