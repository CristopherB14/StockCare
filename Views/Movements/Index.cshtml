@model IEnumerable<StockCare.Models.StockMovement>

@{
    ViewData["Title"] = "Movimientos";
}

<div class="d-flex justify-content-between mb-3">
    <h2>Movimientos</h2>
    <a class="btn btn-primary" href="/Movements/Create">Nuevo Movimiento</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Fecha</th>
            <th>Producto</th>
            <th>Tipo</th>
            <th>Cantidad</th>
            <th>Notas</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>@item.Date.ToLocalTime()</td>
            <td>@item.Product?.Name</td>
            <td>@item.Type</td>
            <td>@item.Quantity</td>
            <td>@item.Notes</td>
        </tr>
    }
    </tbody>
</table>
